@using BusinessObject.Models;
@model User;
<body>
<div class="col-12 col-xl-12">
    <div class="card h-100">
        <div class="card-header pb-0 p-3">
            <div class="row">
                <div class="col-md-8 d-flex align-items-center">
                    <h6 class="mb-0">User Information</h6>
                </div>
                <div class="col-md-4 text-end">
                    <a href="javascript:;">
                        <i class="fas fa-user-edit text-secondary text-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit Profile"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body p-3">
            <p class="text-sm">
              @Model.User_Description
            </p>
            <hr class="horizontal gray-light my-4">
            <ul class="list-group">
                <li class="list-group-item border-0 ps-0 pt-0 text-sm"><strong class="text-dark">Full Name:</strong> &nbsp; @Model.User_Name</li>
                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Mobile:</strong> &nbsp; @Model.User_Phone</li>
                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Email:</strong> @Model.User_Email</li>
                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Age:</strong> &nbsp; @Model.User_age</li>
                <li class="list-group-item border-0 ps-0 text-sm">
                    <strong class="text-dark"> Status</strong> &nbsp;@if (Model.Status == 0)
                    {
                        <span class="badge badge-sm bg-gradient-success">Active</span>
                    }
                    else
                    {
                        <span class="badge badge-sm bg-gradient-secondary">Inactive</span>
                    }
                </li>

            </ul>
        </div>
    </div>
</div>
</body>


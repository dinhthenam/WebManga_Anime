@using BusinessObject.Models;
@model Category

<body>
    <div class="col-12 col-xl-12">
        <div class="card h-100">
            <div class="card-header pb-0 p-3">
                <div class="row">
                    <div class="col-md-8 d-flex align-items-center">
                        <h6 class="mb-0">Category Information</h6>
                    </div>
                    <div class="col-md-4 text-end">
                        <a href="javascript:;">
                            <i class="fas fa-edit text-secondary text-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit Category"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body p-3">
                <hr class="horizontal gray-light my-4">
                <ul class="list-group">
                    <li class="list-group-item border-0 ps-0 pt-0 text-sm"><strong class="text-dark">Category Name:</strong> &nbsp; @Model.Category_Name</li>
                </ul>
            </div>
        </div>
    </div>
</body>
